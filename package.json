{
  "name": "@superdispatch/sdk",
  "version": "0.9.0",
  "private": false,
  "description": "Super Dispatch JavaScript SDK",
  "repository": "git@github.com:superdispatch/sdk.git",
  "license": "MIT",
  "author": "Umidbek Karimov <uma.karimov@gmail.com>",
  "main": "src/index.ts",
  "scripts": {
    "build": "yarn pika build",
    "prerelease": "yarn --force && yarn lint && yarn tsc && yarn build",
    "release": "yarn pika publish",
    "lint": "js-tools lint",
    "tdd": "jest --watch",
    "test": "jest --coverage",
    "version": "yarn build"
  },
  "lint-staged": {
    "*": [
      "js-tools lint --fix --quiet"
    ]
  },
  "prettier": "@superdispatch/prettier-config",
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.spec.ts"
    ],
    "testPathIgnorePatterns": [
      "/pkg/",
      "/node_modules/"
    ]
  },
  "devDependencies": {
    "@pika/cli": "0.2.0",
    "@pika/pack": "0.5.0",
    "@pika/plugin-build-node": "0.9.2",
    "@pika/plugin-build-types": "0.9.2",
    "@pika/plugin-build-web": "0.9.2",
    "@pika/plugin-bundle-types": "0.9.2",
    "@pika/plugin-standard-pkg": "0.9.2",
    "@superdispatch/babel-preset": "0.13.1",
    "@superdispatch/eslint-plugin": "0.13.1",
    "@superdispatch/js-tools": "0.13.1",
    "@superdispatch/prettier-config": "0.13.1",
    "@superdispatch/tsconfig": "0.13.1",
    "@types/jest": "28.1.8",
    "eslint": "8.24.0",
    "husky": "8.0.3",
    "jest": "28.1.3",
    "lint-staged": "13.1.0",
    "prettier": "2.7.1",
    "typescript": "4.8.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "__tests__/**/*",
            "__testutils__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-types",
        {
          "tsconfig": "./tsconfig.build.json"
        }
      ],
      [
        "@pika/plugin-bundle-types"
      ]
    ]
  }
}
